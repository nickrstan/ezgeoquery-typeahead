{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
